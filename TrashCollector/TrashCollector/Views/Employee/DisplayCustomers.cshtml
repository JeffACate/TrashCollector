@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "EmployeeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EmployeeIndex</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PickUpDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyAddOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartServiceInterruption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndServiceInterruption)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PickUpDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlyAddOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartServiceInterruption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndServiceInterruption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td>
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
